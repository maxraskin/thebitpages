<%= image_tag "bitpages_logo.png" %>
<hr style="width: 100%; height: 1em; background: #fff; margin: 0 auto;">

<div class="row">
  <div class="span2 offset1 profile">
    <% if current_merchant_profile.present? %>
      <%= render "leftside_profile_merchant" %>
    <% elsif current_user.present? %>
      <%= render "leftside_profile_user" %>
    <% else %>
      <%= render "leftside_profile_unregistered" %>
    <% end %>
  </div>

  <div class="span9">

    <%= render "discover_merchants" %>
    
    <div class="row">
      <div class="span6">
        <h4>Recent Bitcoin merchants listed on The Bit Pages</h4>
        <div class="row">
          <%= render "merchant_list" %>
        </div>
      </div>
    
      <%= render "recent_members" %>
    </div>
  </div>

</div>