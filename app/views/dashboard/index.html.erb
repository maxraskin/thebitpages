<%= render "layouts/logo.html.erb" %>

<div class="row">
  <div class="span2 offset1 profile">
    <% if current_merchant_profile.present? %>
      <%= render "leftside_profile_merchant" %>
    <% elsif current_user.present? %>
      <%= render "leftside_profile_user" %>
    <% else %>
      <%= render "leftside_profile_unregistered" %>
    <% end %>
  </div>

  <% if flash[:alert] %>
    <div class="notice span9">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="span9">
    <div class="row">
      <div class="span4">
        <%= render "discover_merchants" %>
      </div>

      <div class="span4">

        <%= render "discover_users" %>
        
      </div>

    </div>

    <div class="row">
      <div class="span4">
        <h4>Recent Bitcoin merchants</h4>
        <%= will_paginate @merchants, :param_name => :merchant_page %>
        <%= render "merchant_list" %>
      </div>

      <div class="span4">
        <h4>New Bit Pages Members</h4>
        <%= will_paginate @new_members, :param_name => :user_page %>
        <%= render "recent_members" %>
      </div>
    </div>
    
    
      <div class="span6">
      </div>

    
    </div>
  </div>

</div>