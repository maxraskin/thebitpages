<h1>Bit Pages Logo (dashboard)</h1>
<% if flash[:notice] %>
    <div class="notice">
      <h3>Flash_Notice: </h3>
      <%= flash[:notice] %>
    </div>
  <% end %>
<hr style="width: 100%; height: 1em; background: #fff; margin: 0 auto;">

<div class="row">

  <div class="span3">
    <% if current_merchant.present? %>
      <%= render "leftside_profile_merchant" %>
    <% elsif current_user.present? %>
      <%= render "leftside_profile_user" %>m
    <% else %>
      <%= render "leftside_profile_unregistered" %>
    <% end %>
  </div>

  <div class="span9">
    <div class="row">
      <div class="span9 search">
        <h4>Merchant Map</h4>
      </div>

      <div class="span6">
        <div class="google-map-box" id="merchant-google-map"></div>
      </div>

      <div class="span3">
        <h4>Nearby Merchants</h4>

        <div class="row">
          <% @merchants.each do |merchant| %>
            <div class="span4" style="border: 1px solid black">
                <b><%= merchant.bname %></b> <br />
                <%= merchant.industry %> <br />  
                <%= merchant.street_address %> <br />
                <%= merchant.city %>, <%= merchant.state %> <%= merchant.zip_code %>

            </div>
          <% end %>    
        </div>
      </div>

      <div class="span4">
        <%= form_tag map_path, :method => 'post' do %>
          <%= hidden_field_tag :category, @industry, :placeholder => "Search by category (e.g. restaurants, shopping, games)" %> <br />
          <%= text_field_tag :zip_code, nil, :placeholder => "Enter new zip code to update map" %>
          <%= button_tag "Update Map", :name => "merchant_map", :class => "btn btn-primary" %>
          
        <% end %>
      </div>
    </div>
  </div>
  
</div>

<script>
  $(window).load(function() {
    loadScript();
  })
</script>

