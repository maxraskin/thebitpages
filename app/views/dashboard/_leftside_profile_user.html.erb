<div class="row" id="leftside-profile">
  <div class="span3">
    <h4><%= current_user.name %></h4>
  </div>

  <div class="span3 avatar-image-profile">
    <%= image_tag current_user.avatar.url %>
  </div>

  <div class="span3">
    <%= button_to "edit profile", edit_user_registration_path, :method => :get, :class => "btn profile-btn" %>
  </div>

  <div class="span3">
    <%= button_to "view profile", user_path(current_user) , :method => :get, :class => "btn profile-btn" %>
  </div>

  <div class="span3">
    <%= button_to "Inbox", conversations_path, :method => :get, :class => "btn profile-btn"  %>
  </div>

  <div class="span3">
    <% if @number_of_friendships == 0 %>
      <%= button_to "My network (0)", network_path, :method => :get, :class => "btn profile-btn" %>
    <% else %>
      <%= button_to "My network (#{@number_of_friendships})", network_path, :method => :get, :class => "btn profile-btn" %>
    <% end %>
  </div>


  <img id="bitcoin-id" src="" alt="QR code"><img>

  <div class="span3">
    <% if current_user.twitter.present? %>
      <a href="https://twitter.com/<%= current_user.twitter %>" class="twitter-follow-button" data-show-count="false" data-size="large"></a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
    <% end %>
    <p><%= current_user.zip_code %></p>
    <p><%= current_user.phone %></p> 
    <p><%= current_user.company_affiliation %></p> 
    <p><%= current_user.industry %></p> 
    <p><%= current_user.job_title %></p>
  </div>

</div>  

<script>
  window.onload = bitcoinCode(gon.current_user.bitcoin_address);
</script>