<%= render "layouts/logo.html.erb" %>

<div class="row">
  
  <div class="span2 offset1 profile">
    <% if current_merchant.present? %>
      <%= render "leftside_profile_merchant" %>
    <% elsif current_user.present? %>
      <%= render "leftside_profile_user" %>
    <% else %>
      <%= render "leftside_profile_unregistered" %>
    <% end %>
  </div>

  <div class="span9">

    <div class="row">
      <div class="span6">
        <%= render "discover_merchants" %>
      </div>

      <div class="span3">
      </div>

      <div class="span5">
        <h4>Search Results for Merchants: </h4>
        <div class="row merchant-list">
          <%= render "merchant_list" %>
        </div>
      </div>

      <div class="span4">
        <div class="google-map-box" id="merchant-google-map"></div>
      </div>
      
      <div class="span9">
        <%= render "recent_members" %>
      </div>
    </div>
  </div>
  

</div>


<script>
  $(window).load(function() {
    loadScript();
  })
</script>