<div class="create-account-header text-center">
  <%= render "layouts/logo.html.erb" %>
</div>

<div class="text-center account-form">
  <h2>Sign in to an existing account</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="create-account">
    <%= link_to "Sign up instead", new_registration_path(resource_name) %>
    
    <div>
      <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>  
    </div>

    <div>
      <%= f.password_field :password, :placeholder => "Password" %>  <br>
      <%= link_to "Forgot your password?", new_password_path(resource_name), html_options = { :style => "font-size: .8em;"} %>
    </div>

    <div><%= f.submit "Sign in" %></div>

  <% end %>
  </div>

  <div class="span10">
  </div>

</div>

