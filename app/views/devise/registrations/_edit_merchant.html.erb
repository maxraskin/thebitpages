<div id="merchant-edit-profile">
  
  <h2>Create your Merchant Page</h2>
  <p>Before you start using The Big Pages, please complete your merchant profile</p>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f| %>
    <%= devise_error_messages! %>
    <h2> <%= current_merchant.name %> </h2>
    
    <div>
      <% if current_merchant.avatar.url.present? %>
        <%= image_tag(current_merchant.avatar.url) %>
        <%= f.label :remove_avatar do %></br>
          <%= f.check_box :remove_avatar %> Remove avatar</br>
        <% end %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      <% else %>
        <%= f.label :avatar do %>
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        <% end %>
      <% end %>
    </div>
  
    <div class="row">
      <div class="span6" style:"width: 100%;">
          <%= f.text_field :street_address, :placeholder => "Street Address" %>

          <%= f.text_field :city, :placeholder => "City" %>

          <%= f.text_field :state, :placeholder => "State" %>

          <%= f.text_field :zip_code, :placeholder => "Zip Code" %>

          <%= f.check_box :online_business %>
          <%= f.label :online_business, "This is an online business - no physical address" %>

          <%= f.text_field :bitcoin_address, :placeholder => "Bitcoin address (optional)" %>

          <%= f.text_field :company_website, :placeholder => "Company website (optional)" %>

       
          <%= f.telephone_field :phone, :placeholder => "Phone (optional)" %>

          <%= f.text_field :company_affiliation, :placeholder => "Company affiliation (optional)"%>
            
          <%= f.text_field :industry, :placeholder => "Industry" %>

          <%= f.text_field :twitter, :placeholder => "Twitter (optional)" %>
      </div>
      
      <div class="span6">
        <div>
          <%= f.text_area :bio, :placeholder => "Bio / notes about your Bitcoin involvement and who you are looking to connect with in the community (optional)", :size => "10x10" %>
        </div>
      </div>
    </div>




    <div>
      <%= f.email_field :email, :autofocus => true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div>
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, :autocomplete => "off" %>
    </div>

    <div>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password %>
    </div>

    <div>
      <%= f.submit "Save Profile" %>
    </div>
  <% end %>
</div>

