<div class="profile-show-view">

  <p>Create your profile</p>
  <p>Before you start using The Bit Pages, please complete your profile</p>
    
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f| %>
  <%= devise_error_messages! %>
    
    <div class="main-field-box">
      <div class="row">
        <div class="span12">
          <h2><%= current_user.name %></h2>
        </div>

        <div class="span2 ">
          <%= image_tag(current_user.avatar.url) %>
        </div>

        <div class="span10 avatar-field">
          <%= f.file_field :avatar, :name => "Add/Change profile photo" %>
          <%= f.hidden_field :avatar_cache %>
        </div>

      </div>
    
      <div class="span6 info-fields">
        <%= f.input :zip_code, :placeholder => "Zip Code (optional)" %>
        <%= f.input :bitcoin_address, :placeholder => "Bitcoin Address (optional)"%>
        <%= f.input :twitter, :placeholder => "Twitter (optional)" %>
        <%= f.input :phone, :placeholder => "Phone (optional)"%>
        <%= f.input :company_affiliation, :placeholder => "Company Affiliation (optional)"%>
        <%= f.input :industry, :as => :select, :collection => ["Restaurant", "IndustryB", "IndustryC", "IndustryD"],:placeholder => "Industry"%>
        <%= f.input :job_title, :placeholder => "Job Title (optional)"%>
        <%= f.input :current_password, :placeholder => "Current Password - To confirm your changes" %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>

      <div class="span5 profile-bio">
        <%= f.input :bio, :placeholder => "Bio / notes about your Bitcoin involvement and who you are looking to connect with in the community (optional)", :size => "10x10", :input_html => {:style => "width: 100%"} %>
        <%= f.button :submit, "Save Profile", :class => "save-profile-btn" %>
      </div>

      <div class="span6 password-fields">
        <%= f.input :email, :label => "New Email" %>
        <%= f.input :password, :label => "New Password", :placeholder => "Password", :autocomplete => "off", :inline_label => "yes'" %>
        <%= f.input :password_confirmation, :label => "New Password confirmation", :placeholder => "Password Confirmation" %> 
      </div>

    </div>
  <% end %>
</div>