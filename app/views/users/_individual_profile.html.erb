<div class="row">
  <div class="span5">
    <div class="row profile">
      <div class="offset1 span4">
        <h4><%= @user.name %></h4>
        <%= image_tag(@user.avatar.url) %>
        <img src="https://chart.googleapis.com/chart?chs=200x200&amp;cht=qr&amp;chl=Hello%20world&amp;choe=UTF-8" alt="QR code">
      </div>

      <div class="offset1 span5">
        <p><%= @user.industry %></p>
      </div>

      <div class="offset1 span5">
        <p><%= @user.zip_code %></p>
        <p><%= @user.email %></p>
        <p>Twitter: <%= @user.twitter %></p>
        <p><%= @user.phone %></p>
      </div>
    </div>  
  </div>

  <div class="span7">
    <div class="row">
      <div class="span3">
        <button>Add to network</button>
      </div>

      <div class="span3 offset1">
        <button>Send a message</button>
      </div>
    </div>

    <p><%= @user.bio %></p>


  </div>
</div>
