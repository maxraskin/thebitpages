<h1>Users#index</h1>

<% @users.each do |user| %>
  <div class="user">
    <p>
      <strong><%=h user.name %></strong>
      <% unless current_user.user_friendships.include?(UserFriendship.find_by_user_friend_id(user.id)) %>
        <%= link_to "Add Friend", user_friendships_path(:user_friend_id => user), :method => :post %>
      <% else %>
        <i>Already Added!</i>
      <% end %>
      <div class="clear"></div>
    </p>
  </div>
<% end %>
