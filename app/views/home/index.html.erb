<!-- User registration and login buttons below -->
      <div class="span3 merchant-sign-up-button">
        <div style="background: orange;">
          <%= link_to("Merchants Sign Up", new_merchant_registration_path) %>
        </div>
      </div>
        <!-- Change Devise User Account type! -->
      <div class="span3 individual-sign-up-button">
