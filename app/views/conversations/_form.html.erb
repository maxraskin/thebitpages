<%= simple_form_for :conversation, :url => :conversations do |f| %>
  <div class="span6">
    <%= f.input :recipients, :label => "Recipient", :collection => @potential_recipients %>
  </div>
  <div class="form-actions span6">
    <%= f.input :subject %>
    <div class="conversation-body">
      <%= f.input :body %>
    </div>
    <%= f.button :submit, :class => "btn" %>
    <%= submit_tag "Cancel", :type => :reset, :class => "btn" %>    
  </div>
<% end %>