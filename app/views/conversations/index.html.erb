<%= image_tag "bitpages_logo.png" %>
<hr style="width: 100%; height: 1em; background: #fff; margin: 0 auto;">

<div class="row">
  <div class="span2 offset1 profile">
    <% if current_merchant_profile.present? %>
      <%= render "dashboard/leftside_profile_merchant" %>
    <% elsif current_user.present? %>
      <%= render "dashboard/leftside_profile_user" %>
    <% end %>
  </div>

  <div class="span9">
    <%= button_to "Send a Message", new_conversation_path, :class => "btn btn-primary", :method => "get" %>
  </div>

  <div class="span9">
    <div class="row">
      
      <div class="span9" id="messaging-inbox">
        <h4>Inbox</h4>
         <ul>
           <%= render mailbox.inbox %>
         </ul>
      </div>
      
      <div class="span9" id="messaging-sentbox">
        <h4>Sentbox</h4>
        <ul>
          <%= render mailbox.sentbox %>
        </ul>
      </div>

    </div>
  </div>

</div>