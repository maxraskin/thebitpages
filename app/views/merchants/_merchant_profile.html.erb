<div class="row">
  <div class="span5">
    <div class="row profile">
      <div class="offset1 span4">
        <p>(Verified Status*****)</p>
        <h4><%= @merchant.bname %></h4>
        <%= image_tag(@merchant.avatar.url) %>
        <img src="https://chart.googleapis.com/chart?chs=200x200&amp;cht=qr&amp;chl=Hello%20world&amp;choe=UTF-8" alt="QR code">
      </div>

      <div class="offset1 span5">
        <p><%= @merchant.industry %></p>
      </div>

      <div class="offset1 span5">
        <p><%= @merchant.street_address %></p>
        <p><%= @merchant.city %>, <%= @merchant.state %> <%= @merchant.zip_code %></p>
        <p><%= @merchant.company_website %></p>
        <p><%= @merchant.twitter %></p>
        <p><%= @merchant.phone %></p><br><br><br>
        

      </div>
    </div>  
  </div>

  <div class="span7">
    <div class="row">
      <div class="claimed-merchant">
        <% if @merchant.merchant_profile.present? %>
          <div class="span3">
          <% if current_merchant.present? %>
            <% if current_merchant.merchant_friendships.include?(Mer  chantFriendship.find_by_merchant_id(@merchant.id)) %>
              <b><i>Already Added!</i></b>
            <% else %>
              <%= button_to "Add to Network", merchant_friendships_path(:merchant_friend_id => @merchant), :method => :post %>
            <% end %>
          <% elsif current_user.present? %>
            <% if current_user.user_merchant_friendships.include?(UserMerchantFriendship.find_by_merchant_id(@merchant.id)) %>
              <b><i>Already Added!</i></b>
            <% else %>
              <%= button_to "Add to Network", user_merchant_friendships_path(:merchant_friend_id => @merchant), :method => :post %>
            <% end %>
          <% end %>
          </div>
          <div class="span3 offset1">
            <button>Send a message</button>
          </div>
        <% else %>
          <h3>Is this your business?</h3>
          <button>Claim This Page</button>
          <p>Creating a Bit Pages account will allow you to add information about your business so that Bitcoin users can easily find you ... use their Bitcoins to pay for goods & services that you offer.</p>
        <% end %>
        
      </div>
      

    </div>

    <p><%= @merchant.bio %></p>

    <!-- Google Maps -->
    <div id="merchant-google-map" class="google-map-box">
      
    </div>
  </div>
</div>

<!-- Load Google Maps Below -->
<script>
  $(window).load(function() {
    loadScript();
  })
</script>
